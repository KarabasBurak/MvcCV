@using MvcCV.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ 
    string btnColor = "";
    string spanColor = "";
} 

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                           
                        </div><!-- /.card-header -->
                        <div class="card-body">
                           
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach(var item in Model)
                                        {
                                            if (item.ID % 2 == 0)
                                            {
                                                btnColor = "btn btn-danger";
                                            }
                                            else
                                            {
                                                btnColor = "btn btn-primary";
                                            }
                                        <div class="time-label">
                                            <a href="/Sertifika/SertifikaGetir/@item.ID" class="@btnColor ">
                                                <span class="@spanColor">
                                                    @item.Tarih
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                            <div class="timeline-item">                                                                                      
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                @*<div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                </div>*@
                                            </div>
                                        </div>
                                        }
                                    </div>
                                    <a href="/Sertifika/YeniSertifika" class="btn btn-outline-danger">Yeni Sertifika Ekle</a>
                                </div>
                            </div>                           
                        </div>
                    </div>                   
                </div>               
            </div>           
    </section>
</body>
</html>