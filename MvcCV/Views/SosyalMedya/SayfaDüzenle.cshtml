@model MvcCV.Models.Entity.TblSosyalMedya
@{
    ViewBag.Title = "SayfaDüzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sosyal Medya Hesabı Düzenleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Sosyal Medya İsmi")
    @Html.TextBoxFor(x => x.İsim, new { @class = "form-control" })
    <br />
    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("İcon")
    @Html.TextBoxFor(x => x.İcon, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>



